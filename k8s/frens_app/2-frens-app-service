apiVersion: v1
kind: Service
metadata:
  name: frens-app-service
  labels:
    app: frens-app
spec:
  selector:
    app: frens-app
  ports:
  - port: 3000          # Service port
    targetPort: 3000    # Container port
    protocol: TCP
    name: http
  type: ClusterIP       # Using ClusterIP since we'll access via Ingress